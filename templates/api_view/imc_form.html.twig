{% extends 'base.html.twig' %}

{% block form_header %}
<blockquote id="get_color_txt">

<h1 class="gradient-text">Fill out this form below to be register !</h1>
<p><cite class="citation">– Ready?... Go!</cite></p>

</blockquote>

{% endblock form_header %}


{% block main %}

{{ form_start(form) }}

<div>
{{ form_label(form.gender) }}
{{ form_widget(form.gender) }}
<br>
</div>
<div>
{{ form_label(form.name, 'Nom') }}
{{ form_widget(form.name) }}
<br>
</div>
<div>
{{ form_label(form.surname, 'Prénom') }}
{{ form_widget(form.surname) }}
<br>
</div>
{{ form_row(form.surname) }}
{{ form_row(form.email) }}
{{ form_row(form.age) }}


<div class="container">
<div class="row">
<h2>  <div class="col-md-12">
<button type="submit" class="btn btn-labeled btn-success ajust-btn">
<span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span>&nbsp;Valider</button>

<br /></h2>
</div>
</div>


{{ form_end(form) }}

{% endblock main %}

